@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="container" style="width:373px;height:350px;">
    <div class="row">
        <ul class="nav nav-pills flex-column flex-sm-row">
            <li class="active"><a class="flex-sm-fill text-sm-center nav-link " data-toggle="tab" href="#home"><b>Doctor</b> </a></li>
            <li><a class="flex-sm-fill text-sm-center nav-link active " data-toggle="tab" href="#menu1"><b>Patient </b></a></li>
            <li><a class="flex-sm-fill text-sm-center nav-link " data-toggle="tab" href="#menu2"><b>Admin</b> </a></li>
        </ul>
    </div>
    <div class="row">
        <div class="tab-content "style="border: 2px teal solid;border-radius:20px;">
            <div id="home" class="tab-pane fade ">
                <h1>Doctor Registration</h1>

                <form method="post">
                    <div class="col">
                        <hr />
                        <div asp-validation-summary="All" class="text-danger"></div>

                        <div class="form-group">
                            <label asp-for="Input.UserName"></label>
                            <input asp-for="Input.UserName" class="form-control" />
                            <input asp-for="Input.Role" value="Doctor" style="display:none" class="form-control" />
                            <input asp-for="Input.SSN" style="display:none" value="258741339" class="form-control" />

                            <span asp-validation-for="Input.UserName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Input.Password"></label>
                            <input asp-for="Input.Password" class="form-control" />
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        <button type="submit" style="margin-bottom:25px" id="doctor" class="btn btn-primary">Register</button>
                        <br />

                    </div>

                </form>
            </div>
            <div id="menu1" class="tab-pane fade in active show ">
                <h1>Patient Registration</h1>
                <form method="post">
                    <div class="col">
                        <hr />
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Input.SSN"></label>
                            <input asp-for="Input.SSN" class="form-control" />
                            <input asp-for="Input.Role" style="display:none" value="Patient" class="form-control" />
                            <input asp-for="Input.UserName" style="display:none" value="258741339" class="form-control" />

                            <span asp-validation-for="Input.SSN" class="text-danger"></span>
                        </div> <div class="form-group">
                            <label asp-for="Input.Password"></label>
                            <input asp-for="Input.Password" class="form-control" />
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        <button style="margin-bottom:25px" type="submit" id="Patient" class="btn btn-primary">Register</button>
                        <br />

                    </div>

                </form>
            </div>
            <div id="menu2" class="tab-pane fade">
                <h1>Admin Registration</h1>

                <form method="post">
                        <div class="col">

                            <hr />
                            <div asp-validation-summary="All" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="Input.UserName"></label>
                                <input asp-for="Input.UserName" class="form-control" />
                                <input asp-for="Input.Role" style="display:none" value="Admin" class="form-control" />
                                <input asp-for="Input.SSN" style="display:none" value="258741339" class="form-control" />

                                <span asp-validation-for="Input.UserName" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Input.Password"></label>
                                <input asp-for="Input.Password" class="form-control" />
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                            </div>


                            <button style="margin-bottom:25px" type="submit" id="Admin" class="btn btn-primary">Register</button>

                            <br />
                        </div>

                </form>
            </div>
        </div>
    </div>
  
</div>

@*<form asp-route-returnUrl="@Model.ReturnUrl" method="post">*@


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
